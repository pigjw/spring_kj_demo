<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean的生命周期-->
    <bean id="orders" class="com.lsm.springbean_lifecycle.Orders" init-method="initMethod" destroy-method="destroyMethod">
        <property name="orderName" value="macpro订单"></property>
    </bean>
    <bean class="com.lsm.springbean_lifecycle.MyBeanPreAfter" id="myBeanPreAfter"></bean>
</beans>